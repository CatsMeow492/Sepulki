<?xml version="1.0"?>
<robot name="sample-arm-01">
  <link name="base">
    <visual>
      <geometry>
        <mesh filename="../links/base.glb" />
      </geometry>
    </visual>
  </link>
  <link name="link1">
    <visual>
      <geometry>
        <mesh filename="../links/link1.glb" />
      </geometry>
    </visual>
  </link>

  <!-- add a second articulating link for a more arm-like appearance -->
  <link name="link2">
    <visual>
      <geometry>
        <box size="0.18 0.6 0.18"/>
      </geometry>
    </visual>
  </link>

  <joint name="joint1" type="revolute">
    <parent link="base"/>
    <child link="link1"/>
    <origin xyz="0 0.25 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.57" upper="1.57" velocity="1"/>
  </joint>

  <joint name="joint2" type="revolute">
    <parent link="link1"/>
    <child link="link2"/>
    <origin xyz="0 0.4 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.2" upper="1.2" velocity="1"/>
  </joint>
</robot>


