{
  "name": "@sepulki/hammer-orchestrator",
  "version": "1.0.0",
  "description": "GraphQL API gateway and fleet orchestration service for Sepulki platform",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "schema": "graphql-codegen --config codegen.yml"
  },
  "dependencies": {
    "@apollo/server": "^4.9.0",
    "@sepulki/shared-types": "file:../../packages/shared-types",
    "graphql": "^16.8.0",
    "graphql-scalars": "^1.22.0",
    "ioredis": "^5.3.0",
    "jose": "^5.1.0",
    "pg": "^8.11.0",
    "dataloader": "^2.2.0",
    "cors": "^2.8.5",
    "express": "^4.18.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.10.0",
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/typescript": "^4.0.0",
    "@graphql-codegen/typescript-resolvers": "^4.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
